#! gnumake

#---------------------------------------------------
# The D. P. Weygand Makefile
#---------------------------------------------------
include $(CLAS_CMS)/Rules.make

FINCLUDE := $(FINCLUDE) -I./include
INCLUDE := $(INCLUDE) -I./include

CCSRCS:= dmatrix.cc ssbdmat.cc vertex_mtv.cc 

FSRCS:= 

SRCS:= make_mvrt.c make_vert.c vertex_brun.c vertex_doca.c vertex_hbtr.c vertex_hbtr_multi.c vertex_tbtr.c vertex_tbtr_multi.c 

FOBJS= $(patsubst %.F,$(OBJDIR)/%.o,$(FSRCS))
OBJS= $(patsubst %.c,$(OBJDIR)/%.o,$(SRCS))

CCOBJS= $(patsubst %.cc,$(OBJDIR)/%.o,$(CCSRCS))

EXE_default:=
EXE_IRIX:= $(EXE_default)
EXE_SunOS:= $(EXE_default)
EXE_HP-UX:= $(EXE_default)
EXE_AIX:= $(EXE_default)
EXE_Linux = $(EXE_default)

EXE:= $(EXE_$(OS_NAME))
ifndef EXE
EXE:= $(EXE_default)
endif
all: lib
exe: $(EXE)
LIBS= $(CLAS_LIB)/libvertex$(ADD_DEBUG).a
lib: $(LIBS)
$(LIBS): $(OBJS) $(FOBJS) $(CCOBJS)
	$(VDIR) $(CLAS_LIB)
	ar rv $@ $?
env:
	@echo EXE $(EXE)
	@echo LIBS $(LIBS)
	@echo CC $(CC)
	@echo FC $(FC)
	@echo OS_NAME $(OS_NAME)
	@echo INCLUDE $(INCLUDE)
	@echo BOSPATH $(BOSPATH)
	@echo FLIB $(FLIB)
	@echo OBJS $(OBJS)
	@echo CFLAGS $(CFLAGS)
	@echo INCLUDE $(INCLUDE)
