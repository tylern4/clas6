#
OTHERLOADLIBS= $(ROOTLIBS) -lHbook $(BOSLIB) -L$(localslib) -lClasTool -lVirtualReader -lDSTReader -lClasBanks -lFillBanks
#
ifeq ($(findstring LinuxRHFC8,$(OS_NAME)),LinuxRHFC8)
OTHERLOADLIBS += -lgfortran
